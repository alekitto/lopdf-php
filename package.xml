<?xml version="1.0"?>

<package version="2.0"
         xmlns="http://pear.php.net/dtd/package-2.0"
         xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0 http://pear.php.net/dtd/tasks-1.0.xsd http://pear.php.net/dtd/package-2.0 http://pear.php.net/dtd/package-2.0.xsd"
>
    <name>lopdf</name>
    <channel>pecl.php.net</channel>
    <summary>LoPDF reads and manipulates PDF files</summary>
    <description>
        LoPDF reads and manipulates PDF files.
        This package exposes a native php class to create, read and manipulate PDF files.
    </description>
    <lead>
        <name>alekitto</name>
        <user>alekitto</user>
        <email>alekitto@gmail.com</email>
        <active>yes</active>
    </lead>
    <date>2025-05-22</date>
    <version>
        <release>1.0.0</release>
        <api>1.0.0</api>
    </version>
    <stability>
        <release>stable</release>
        <api>stable</api>
    </stability>
    <license uri="http://license.coscl.org.cn/MIT/">MIT</license>
    <notes>First release of LoPDF extension</notes>
    <contents>
        <dir name="/">
            <file name="Cargo.lock" role="src" />
            <file name="Cargo.toml" role="src" />
            <file name="README.md" role="doc" />
            <file name="LICENSE" role="doc" />
            <file name="config.m4" role="src" />
            <file name="src/lib.rs" role="src" />
            <file name="src/exception.rs" role="src" />
            <file name="src/pdf.rs" role="src" />
            <file name="src/php_stream.rs" role="src" />
        </dir>
    </contents>
    <dependencies>
        <required>
            <php>
                <min>8.0.0</min>
                <max>8.4.99</max>
            </php>
            <pearinstaller>
                <min>1.4.0</min>
            </pearinstaller>
        </required>
    </dependencies>
    <providesextension>lopdf</providesextension>
    <extsrcrelease>
        <configureoption default="no" name="enable-cargo-debug" prompt="enable cargo debug?" />
    </extsrcrelease>
</package>
